@using Microsoft.AspNet.Identity

@Styles.Render("http://netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css")

<div ng-controller="LoginController"> 

    @if (Request.IsAuthenticated)
    {
        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
        {
            @Html.AntiForgeryToken()

            <ul class="nav navbar-nav navbar-right">
                <li>
                    @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                </li>
                <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
            </ul>
        }
    }
    else
    {
        <ul class="nav navbar-nav navbar-right">
            <li ng-click="openRegister()">@Html.Label("Register", htmlAttributes: new { id = "registerLink" })</li>
            <li ng-click="openLogin()">@Html.Label("Log in", htmlAttributes: new { id = "loginLink" })</li>
        </ul>
    }
</div>


